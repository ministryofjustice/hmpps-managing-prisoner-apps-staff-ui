{% extends "../../../partials/layout.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% set pageTitle = applicationName + " - " + title %}
{% set mainClasses = "app-container govuk-body" %}
{% set cropperTextHtml %}
<label class="govuk-label govuk-label--m">Edit the image before continuing</label>
<ul class="govuk-list govuk-list--bullet">
  <li>If needed, crop the image so that one A4 page is visible. Make sure no other paper or information is included in the image.</li>
  <li>If needed, rotate the image.</li>
  <li>You can go back to retake the photo, or save and continue.</li>
</ul>

{% endset %}
{% set cropHtml %}
<div class="hmpps-image-cropper-button-text">
  Edit the photo
</div>
{% endset %}
{% set previewHtml %}
<div class="hmpps-image-cropper-button-text">
  Preview
</div>
{% endset %}
{% set rotateHtml %}
<div class="hmpps-image-cropper-button-text">
  <img src="/assets/images/rotate.svg" role="presentation" alt=""/> Rotate
</div>
{% endset %}
{% block content %}
  <div class="govuk-body govuk-width-container">
    <div class="govuk-grid-row govuk-!-margin-bottom-4">
      <div class="govuk-grid-column-full">
        {{ govukBackLink({
          text: "Back",
          classes: "govuk-!-margin-0",
          href: "/log/photo-capture"
        }) }}
      </div>
    </div>
    {% if errors and errors.length > 0 %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          {{ govukErrorSummary({
            titleText: "There is a problem",
            errorList: errors,
            classes: 'govuk-!-margin-bottom-6'
          }) }}
        </div>
      </div>
    {% endif %}
    <div class="govuk-form-group">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form method='POST' enctype='multipart/form-data'>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
            <input type="file" id="js-cropped-image-input" name="file" hidden/>
            <input type="hidden" name="originalImgSrc" value="{{ imgSrc }}"/>
            <span class="govuk-caption-xl">{{ applicationType }}</span>
            <h1 class="govuk-heading-l govuk-!-margin-bottom-2">{{ title }}</h1>
            <div class="hmpps-cropper-photo-container" id="photo-preview-container">
              <div class="hmpps-cropper-photo-container__content">
                <div class="hmpps-cropper-photo-container__photo-preview">
                  <img src='{{ imgSrc }}' alt="Thumbnail of {{ fileName }}" data-file-name='{{ fileName }}' data-file-type='{{ fileType }}' id='photo-preview'/>
                  <div class="hmpps-cropper-photo-container__controls govuk-!-margin-bottom-0">
                    {{ govukButton({
                    html: cropHtml,
                    type: "button",
                    id: "toggle-crop-button",
                    classes: "hmpps-button__toggle-crop hmpps-cropper-photo-container__controls__full-width govuk-button--secondary",
                    preventDoubleClick: true
                  }) }}
                  </div>
                </div>
                <div class="hmpps-cropper-photo-container__description">
                  {{ cropperTextHtml | safe }}
                </div>
              </div>
            </div>
            <div class="hmpps-cropper-photo-container" id="photo-cropper-container">
              <div class="hmpps-cropper-photo-container__content">
                <div class='hmpps-cropper-container'>
                  <div class="hmpps-cropper-photo-container__photo">
                    <cropper-canvas background>
                      <cropper-image src='{{ imgSrc }}' alt="Thumbnail of {{ fileName }}" initial-center-size="contain" rotatable="false" skewable="false" scalable="false" translatable="false"></cropper-image>
                      <cropper-shade hidden></cropper-shade>
                      <cropper-selection id="cropperSelection" aspect-ratio="0.8" movable resizable outlined keyboard>
                        <cropper-handle action="move" theme-color="rgba(255, 255, 255, 0)"></cropper-handle>
                        <cropper-handle action="n-resize"></cropper-handle>
                        <cropper-handle action="e-resize"></cropper-handle>
                        <cropper-handle action="s-resize"></cropper-handle>
                        <cropper-handle action="w-resize"></cropper-handle>
                        <cropper-handle action="ne-resize"></cropper-handle>
                        <cropper-handle action="nw-resize"></cropper-handle>
                        <cropper-handle action="se-resize"></cropper-handle>
                        <cropper-handle action="sw-resize"></cropper-handle>
                      </cropper-selection>
                    </cropper-canvas>
                    <div class="hmpps-cropper-photo-container__controls govuk-!-margin-bottom-0">
                      {{ govukButton({
                      html: rotateHtml,
                      type: "button",
                      id: "rotate-clockwise",
                      classes: "hmpps-button__rotate-clockwise hmpps-cropper-photo-container__controls__half-width govuk-button--secondary",
                      preventDoubleClick: true
                    }) }}
                      {{ govukButton({
                      html: previewHtml,
                      type: "button",
                      id: "toggle-crop-button",
                      classes: "hmpps-button__toggle-crop hmpps-cropper-photo-container__controls__half-width govuk-button--secondary",
                      preventDoubleClick: true
                    }) }}
                    </div>
                  </div>
                </div>
                <div class="hmpps-cropper-photo-container__description">
                  {{ cropperTextHtml | safe }}
                </div>
              </div>
            </div>
            <div class="govuk-button-group">
              {{ govukButton({
              text: "Save and continue",
              type: "submit",
              preventDoubleClick: true
            }) }}
              
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
