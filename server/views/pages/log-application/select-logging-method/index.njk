{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "../../../components/loggingForSamePrisonerBanner/macro.njk" import loggingForSamePrisonerBanner %}

{% extends "../../../partials/layout.njk" %}

{% set pageTitle = applicationName + " - " + title %}
{% set mainClasses = "app-container govuk-body applications-landing-page" %}

{% block content %}
  <div class="govuk-body govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {{ govukBackLink({
          text: "Back",
          href: "/log/department"
        }) }}
        
        {% if errorSummary %}
          {{ govukErrorSummary ({
            titleText: "There is a problem",
            errorList: errorSummary
          }) }}
        {% endif %}

        {{ loggingForSamePrisonerBanner(isLoggingForSamePrisoner, prisonerName) }}
        
        <span class="govuk-caption-xl">{{ applicationType }}</span>
        <form method="POST" id="loggingMethod">
          <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>

          {{ govukRadios({
            name: "loggingMethod",
            fieldset: {
              legend: {
                text: "Select method to log this application",
                isPageHeading: true,
                classes: "govuk-fieldset__legend--xl"
              }
           },
           items: [
            {
              value: "manual",
              text: "Enter details manually",
              checked: selectedLogMethod === "manual"
            },
            {
              value: "webcam",
              text: "Take a photo of the paper application",
              checked: selectedLogMethod === "webcam"
            }
          ],
           errorMessage: { text: errorMessage } if errorMessage else undefined
          }) }}
          
          {{ govukButton({
            text: "Continue",
            preventDoubleClick: true
          }) }}
        </form>
      </div>
    </div>
  </div>
{% endblock %}
