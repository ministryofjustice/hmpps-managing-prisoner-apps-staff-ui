{%- from "../../../../components/accessibleAutocomplete/macro.njk" import accessibleAutocomplete -%}

{%- set filterOptionsHtml %}
  {{ accessibleAutocomplete({
    label: "Search by prisoner",
    nonce: cspNonce,
    selectedLabel: selectedPrisonerLabel,
    selectedValue: selectedPrisonerId
  }) }}

  {{ govukCheckboxes({
    idPrefix: "group",
    name: "group",
    classes: "govuk-checkboxes--small",
    fieldset: {
      legend: {
        text: "Department",
        classes: "govuk-fieldset__legend--s"
      }
    },
    items: groups
  }) }}

  {{ govukCheckboxes({
    idPrefix: "type",
    name: "type",
    classes: "govuk-checkboxes--small",
    fieldset: {
      legend: {
        text: "Application type",
        classes: "govuk-fieldset__legend--s"
      }
    },
    items: appTypes
  }) }}
{% endset -%}

<form novalidate>
{{ mojFilter({
  heading: { text: "Filter" },
  submit: {
    attributes: { "data-test-id": "submit-button" }
  },
  selectedFilters: {
    heading: { text: "Selected filters" },
    clearLink: { text: "Clear filters", href: "/applications" },
    categories: [
      {
        heading: { text: "Department" },
        items: selectedFilters.groups
      },
      {
        heading: { text: "Application type" },
        items: selectedFilters.types
      }
    ]
  },
  optionsHtml: filterOptionsHtml
}) }}
</form>
