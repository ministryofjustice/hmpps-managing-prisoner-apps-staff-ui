{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% extends "../../partials/layout.njk" %}

{% set pageTitle = applicationName + " - " + title %}
{% set mainClasses = "app-container govuk-body applications-landing-page" %}

{% block content %}
  <div class="govuk-body govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        
        {{ govukPanel({
            titleText: "Application submitted",
            html: "Swap VOs for PIN credit"
          }) }}
          
      </div>
    </div>
   
    <p class="govuk-body-l">{{ application.dept }} now has this application.</p>
    <p class="govuk-body">You can now:</p>
    
    <ul class="govuk-list govuk-list--bullet">
      <li>
        <a href="/view/:application.id">View this application</a>
      </li>
      <li>
        <a href="#">Add another application</a>
      </li>
      <li>
        <a href="#">Return to applications dashboard</a>
      </li>
    </ul>
    
  </div>
{% endblock %}
